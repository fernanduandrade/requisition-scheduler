<!DOCTYPE html>
<html lang="pt-br">

<head>
  <%- include('../partials/head', {title: 'Lista de Agenda' }); %>
</head>

<body>
  <div class="container">
    <%- include('../partials/header'); %>
    <div class="main">
      <%- include('../partials/sidebar', {active: 'Agendas' }); %>
      <div class="content">
        <div class="table">
          <div class="table__wrapper">
            <h2 class="heading-title">Lista de sessões agendadas</h2>
            <table class="table__striped margin-top-meddium">
              <thead class="table__thead">
                <tr>
                  <th>Nome</th>
                  <th>Data</th>
                  <th>Ações</th>
                </tr>
              </thead>
              <tbody>
                <% requisitions.forEach(requisition=> { %>
                <tr>
                  <td>
                    <%= requisition.name %>
                  </td>
                  <td>
                    <%= requisition.date %>
                  </td>
                  <td class="table__action">
                    <a href="/agenda_registrada/<%= requisition._id %>" class="table__action--view" title="Ver"><i>ver</i></a>
                    <a href="/editar_agenda/<%= requisition._id %>" class="table__action--edit" title="Editar"><i>edit</i></a>
                    <a href="/agenda_registrada/<%= requisition._id %>" onclick="return confirm('Agenda finalizada?');" class="table__action--finish" title="Deletar"><i>finalizar</i></a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
            <div class="table__info">
              <div class="table__hint-text">Total de cadastros <strong><%= totalRegister %></strong></div>
              <ul class="table__pagination">
                <% for(let i=1; i <=pages; i++) {%>
                  <li <% if (i==currentPage) {%> class="table__pagination__page-item table__pagination__page-item--active" <%} else { %> class="table__pagination__page-item" <% } %>>
                    <a href="/lista?page=<%= i%>&limit=5">
                      <%= i%>
                    </a>
                  </li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  </div>
</body>

</html>