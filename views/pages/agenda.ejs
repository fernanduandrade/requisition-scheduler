<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../partials/head', {title: 'Lista de Agenda'}); %>
    <link rel="stylesheet" href="list.css">
</head>

<body>
    <div class="container">
        <%- include('../partials/header'); %>

        <div class="main">
            <%- include('../partials/sidebar', {active: 'Agendas'}); %>
            <div class="content">

            </div>
            <div>
            <div class="table-responsive">
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row query">
                            <div class="col-sm-8">
                                <h2 class="heading-title">Lista de sessões agendadas</h2>
                            <div class="col-sm-4">
                                <div class="search-box">
                                    <i></i>
        
                                    <!-- <form action="/pesquisar_agendado" method="GET" id="formId">
                                        <input type="date" name="search" class="form-control dataInput" id="datepicker"placeholder="dd/mm/aaaa">
                                    </form> -->
        
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Data</th>
                                <th class="actions">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% requisitions.forEach(requisition => { %>
                                <tr>
                                    <td><%= requisition.name %></td>
                                    <td id="data"><%= requisition.date %></td>
                                    <td class="actions">
                                        <a href="/agenda_registrada/<%= requisition._id %>" class="view" title="Ver"><i>ver;</i></a>
                                        <a href="/editar_agenda/<%= requisition._id %>" class="edit" title="Editar"><i>editar</i></a>
                                        <a href="/agenda_registrada/<%= requisition._id %>" onclick="return confirm('Tem certeza que deseja excluir?');" class="delete" title="Deletar"><i>deletar</i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <div class="clearfix">
                        <div class="hint-text">Mostrando total de <strong><%= totalRegister %></strong> cadastros</div>
                        <ul class="pagination">
                            <% for(let i = 1; i <= pages; i++) {%>
                                <li <%
                                    if (i == currentPage) 
                                        {%> class="page-item active" <%}
                                    else { %>
                                        class="page-item"
                                    <% } 
                                    %>
                                ><a href="/lista?page=<%= i%>&limit=5" class="page-link"><%= i%></a></li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>  
        </div>   

            </div>
        </div>
    </div>

    
</body>
</html>