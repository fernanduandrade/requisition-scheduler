<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../partials/head', {title: 'Lista de Agenda'}); %>
</head>

<header>
	<%- include('../partials/header'); %>
</header.>

<body>
	<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row query">
                    <div class="col-sm-8"><h2>Lista de sessões agendadas</h2></div>
                    <div class="col-sm-4">
                        <div class="search-box">
                            <i class="material-icons">&#xE8B6;</i>

                            <form action="/pesquisar_agendado" method="GET" id="formId">
                            	<input type="date" name="search" class="form-control dataInput" id="datepicker"placeholder="dd/mm/aaaa">
                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Data</th>
                        <th class="actions">Ações</th>
                    </tr>
                </thead>
                <tbody>
                	<% requisitions.forEach(requisition => { %>
	                    <tr>
	                        <td><%= requisition.name %></td>
	                        <td id="data"><%= requisition.date %></td>
	                        <td class="actions">
	                            <a href="/agenda_registrada/<%= requisition._id %>" class="view" title="Ver" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
	                            <a href="/editar_agenda/<%= requisition._id %>" class="edit" title="Editar" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
	                            <a href="/agenda_registrada/<%= requisition._id %>" onclick="return confirm('Tem certeza que deseja excluir?');" class="delete" title="Deletar" data-toggle="tooltip"><i class="material-icons" style="color:red">delete</i></a>
	                        </td>
	                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">Mostrando <b>5</b> de <strong><%= totalRegister %></strong> cadastros</div>
                <ul class="pagination">
					<% for(let i=0; i < pages; i++) {%>
						<li class="page-item"><a href="/lista?page=<%= i+1%>&limit=5" class="page-link"><%= i+1%></a></li>
					<% } %>
                </ul>
            </div>
        </div>
    </div>  
</div>   
</body>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
<script>

	$(document).ready(function(){
		$('[data-toggle="tooltip"]').tooltip();
	});

	$('#datepicker').change(function(){
        console.log('Submiting form');                
        $('#formId').submit();
    });

    $(".page-item").click( function(){
    	$(this).addClass("active");
	});

</script>

</html>